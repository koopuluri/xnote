<resources>
    <!-- inherit from the material theme -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/primary_palette_medium</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/accent_color_dark</item>

        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!--This is to get the CAB to overlay on top of the toolbar-->
        <item name="windowActionModeOverlay">true</item>

        <!--These are for the context action bar:-->
        <item name="android:actionModeStyle">@style/ToolBarTheme</item>
        <item name="android:actionModeBackground">@drawable/toolbar_bottom_border</item>
        <item name="android:actionModeCopyDrawable">@drawable/ic_xnote_copy</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

</resources>


