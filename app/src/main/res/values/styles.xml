    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:homeAsUpIndicator">@drawable/ic_xnote_navigation_up_colored</item>
        <!--<item name="android:windowNoTitle">true</item>-->
        <!--<item name="windowActionBar">false</item>-->
        <!--This is to get the CAB to overlay on top of the toolbar-->
        <!--<item name="windowActionModeOverlay">true</item>-->
        <item name="android:logo">@android:color/transparent</item>
        <!--These are for the context action bar:-->
        <item name="android:actionBarStyle">@style/ToolBarTheme</item>
        <item name="android:actionModeStyle">@style/ToolBarTheme</item>
        <item name="android:actionModeBackground">@drawable/toolbar_bottom_border</item>
        <item name="android:actionModeCopyDrawable">@drawable/ic_xnote_copy</item>
        <!--<item name="android:actionBarStyle">@style/ToolBarTheme</item>-->
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_xnote_navigation_up_colored</item>
    </style>


    <style name="ToolBarTheme" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:textColorPrimary">@color/xnote_color</item>
        <item name="android:background">@drawable/toolbar_bottom_border</item>

    </style>


    <style name="ActionBarTabStyle.Action_bar_tab" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_action_bar_tab</item>
        <item name="android:textAlignment">center</item>
        <item name="android:itemBackground">@android:color/transparent</item>
        <item name="android:actionBarStyle">@color/primary_palette_medium</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/primary_palette_medium</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <style name="MyActionBarTitleText" parent="android:TextAppearance.WindowTitle">
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_xnote_dropdown</item>
    </style>

</resources>
