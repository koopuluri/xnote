<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:id="@+id/relativeLayout">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/xnote_welcome_graphic"
                android:id="@+id/icon_image_view"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/relativeLayout"
            android:id="@+id/linearLayout">

            <Button
                android:layout_marginTop="@dimen/margin_between_buttons_text_login_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sign_up"
                android:id="@+id/signup_button"
                android:layout_marginBottom="@dimen/margin_between_buttons_text_login_signup"
                android:background="@color/xnote_color" />

            <TextView
                android:text="@string/continue_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/continue_textview"
                android:textSize="@dimen/login_signup_text_size"
                android:layout_marginBottom="@dimen/margin_between_buttons_text_login_signup"
                android:layout_gravity="center"/>

            <TextView
                android:text="@string/continue_to_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="@dimen/login_signup_text_size"
                android:id="@+id/continue_to_login_textview"
                android:layout_gravity="center" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
