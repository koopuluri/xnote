<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="50dp"
        android:layout_centerInParent="true">
    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/logo"
        android:id="@+id/icon_image_view"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="60dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/caption_text_view"
        android:layout_marginBottom="70dp"
        android:layout_below="@+id/icon_image_view"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/signup_button"
        android:layout_marginBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/caption_text_view"
        android:layout_centerHorizontal="true" />

    <TextView android:text="@string/continue_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/continue_textview"
        android:textSize="12dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/signup_button"
        android:layout_centerHorizontal="true" />

    <TextView android:text="@string/continue_to_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="12dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/continue_to_login_textview"
        android:layout_below="@+id/continue_textview"
        android:layout_centerHorizontal="true" />

    </RelativeLayout>

</RelativeLayout>