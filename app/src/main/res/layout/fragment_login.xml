<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:id="@+id/login_fragment_main_container"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <LinearLayout xmlns:android ="http://schemas.android.com/apk/res/android"
        android:id="@+id/login_fragment_form_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_between_buttons_text_login_signup"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:id="@+id/password"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_between_buttons_text_login_signup"
            android:hint="Password"
            android:password="true" />

        <LinearLayout xmlns:android ="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/done_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Done"
                android:background="@drawable/note_icon_search"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/margin_between_buttons_text_login_signup"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signup_textview"
                android:text="Click here to sign up"
                android:textSize="@dimen/login_signup_text_size"
                android:layout_marginBottom="@dimen/margin_between_buttons_text_login_signup"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/forgot_password"
                android:textSize="@dimen/login_signup_text_size"
                android:layout_gravity="center_horizontal"
                android:text="@string/forgot_password"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>