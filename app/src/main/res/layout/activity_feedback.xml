<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.xnote.lol.xnote.activities.FeedbackActivity">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:weightSum="2">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/note_clipped_text_margin"
                    android:layout_marginBottom="@dimen/note_clipped_text_margin"
                    android:background="@drawable/note_clipped_bottom_border">
                    <Spinner
                        android:id="@+id/feedback_nature_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true">
                    </Spinner>
                </FrameLayout>

                <EditText
                    android:id="@+id/comments_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:background="@color/white"/>

            </LinearLayout>

        </ScrollView>

        <ImageButton
            android:id="@+id/done_button"
            android:layout_width="@dimen/round_button_diameter"
            android:layout_height="@dimen/round_button_diameter"
            android:layout_gravity="right|bottom"
            android:gravity="right|bottom"
            android:stateListAnimator="@anim/button_elevation"
            android:layout_marginBottom="@dimen/add_button_margin"
            android:layout_marginEnd="@dimen/add_button_margin"
            android:background="@drawable/round_button"
            android:src="@drawable/ic_xnote_check"/>

    </FrameLayout>

</RelativeLayout>

