<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tutorial_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_primary"
            android:text="Welcome to Xnote! Here's a short tutorial to get you started!"
            android:layout_marginBottom="@dimen/note_clipped_text_margin"
            android:layout_marginTop="@dimen/note_clipped_text_margin"
            android:layout_marginLeft="@dimen/note_clipped_text_margin"
            android:layout_marginRight="@dimen/note_clipped_text_margin"
            android:gravity="center_horizontal"
            />


        <ImageView
            android:id="@+id/tutorial_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/note_clipped_text_margin"/>
    </LinearLayout>


    <ImageButton
        android:id="@+id/tutorial_next_button"
        android:layout_width="@dimen/round_button_diameter"
        android:layout_height="@dimen/round_button_diameter"
        android:layout_gravity="right|bottom"
        android:stateListAnimator="@anim/button_elevation"
        android:layout_marginBottom="@dimen/add_button_margin"
        android:layout_marginEnd="@dimen/add_button_margin"
        android:background="@drawable/round_button"
        android:elevation="@dimen/elevation_low"
        android:src="@drawable/ic_xnote_navigation_forward">
        </ImageButton>
</FrameLayout>