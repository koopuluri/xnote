<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/article_parent_relative_layout"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_read_container"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent">
        <com.xnote.wow.xnote.views.ObservableScrollView
            android:id="@+id/read_scroll_view"
            android:layout_below="@id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.xnote.wow.xnote.views.ObservableScrollView>

    </FrameLayout>


    <ProgressBar
        android:id="@+id/fragment_article_loading_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/new_note_button"
            android:layout_width="@dimen/round_button_diameter"
            android:layout_height="@dimen/round_button_diameter"
            android:layout_gravity="right|bottom"
            android:gravity="right|bottom"
            android:stateListAnimator="@anim/button_elevation"
            android:layout_marginBottom="@dimen/add_button_margin"
            android:layout_marginEnd="@dimen/add_button_margin"
            android:background="@drawable/round_button"
            android:elevation="@dimen/elevation_low"
            android:src="@drawable/add_icon"/>

    p<FrameLayout
        android:id="@+id/note_taking_tutorial"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66FFFF00">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="500px"
                android:layout_height="801px"
                android:layout_gravity="center"
                android:src="@drawable/tutorial_screenshot"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:id="@+id/tutorial_message"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:text="@string/note_tutorial_message"/>
            </FrameLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/tutorial_done_button"
            android:layout_width="@dimen/round_button_diameter"
            android:layout_height="@dimen/round_button_diameter"
            android:layout_gravity="right|bottom"
            android:gravity="right|bottom"
            android:stateListAnimator="@anim/button_elevation"
            android:layout_marginBottom="@dimen/add_button_margin"
            android:layout_marginEnd="@dimen/add_button_margin"
            android:background="@drawable/round_button"
            android:src="@drawable/done_icon"
            android:elevation="@dimen/elevation_low"/>

    </FrameLayout>
</FrameLayout>